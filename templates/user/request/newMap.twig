{% extends 'styled.twig' %}

{% block topPanel %}
    {% embed 'parts/topPanel.twig' %}
    {% endembed %}
{% endblock %}

{# TODO THIS SHOULD BE SHINY #}
{% block body %}
    {% if added %}
        <div class="row">
            <div class="col-md-6">
                map added to wish list, wanna add another one?
            </div>
        </div>
    {% endif %}
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div class="form-group">
                    <label for="mapName">Map name</label>
                    <input type="text" class="form-control" id="mapName" name="mapName"
                           placeholder="Enter map name like &quot;de_dust2&quot;">
                </div>
                <div class="form-group">
                    <label for="workshopLink">Steam Workshop URL</label>
                    <input type="text" class="form-control" id="workshopLink" name="workshopLink"
                           placeholder="Enter workshop link">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
{% endblock %}